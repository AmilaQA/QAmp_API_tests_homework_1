	"item": [
		{
			"name": "Login_Positive TC",
			"item": [
				{
					"name": "Valid credentials-token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const responseJson = pm.response.json();\r",
									"const token = responseJson.api_token;\r",
									"\r",
									"pm.test('Token is present', () => {\r",
									"  pm.expect(token).to.exist;\r",
									"});\r",
									"\r",
									"pm.test(\"Status code is 201\", function () {\r",
									"    pm.response.to.have.status(201);\r",
									"});\r",
									""
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n    \"email\":\"{{email}}\",\r\n    \"password\":\"{{password}}\"\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v2/sessions",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v2",
								"sessions"
							]
						}
					},
					"response": []
				}
			]
		},
